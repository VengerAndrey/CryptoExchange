@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}
@section Scripts
{
    <script src="~/js/home.js"></script>
}


@if (ViewData["userId"] != null)
{
<div class="absolute-center flex-vertical align-items-center">
    <div class="flex-horizontal align-items-baseline">
        <div class="flex-vertical margin-20">
            <div class="flex-vertical align-items-center round-border">
                <h2 class="margin-10">Your balance</h2>
                <p id="balance"></p>
            </div>
            <div class="flex-vertical align-items-center round-border">
                <h2 class="margin-10">Your accounts</h2>
                <div id="accounts" class="data-table">

                </div>
            </div>
        </div>
        <div class="flex-vertical align-items-center margin-20 round-border">
            <h2 class="margin-10">Market</h2>
            <div id="coins" class="data-table">

            </div>
        </div>
        <div class="flex-vertical align-items-center margin-20 round-border">
            <h2 class="margin-10">Trade</h2>
            <div class="flex-horizontal">
                <div class="round-border">
                    <table class="form-table">
                        <tr>
                            <td>
                                Coin
                            </td>
                            <td>
                                <select id="select-coin-buy"></select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Rate
                            </td>
                            <td>
                                <span id="rate-buy" class="width-100"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Amount
                            </td>
                            <td>
                                <input id="amount-buy" class="width-100" type="number" min="0" step="0.01" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <button id="button-buy" class="center-horizontally margin-10 width-100" disabled>Buy</button>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="round-border">
                    <table class="form-table">
                        <tr>
                            <td>
                                Coin
                            </td>
                            <td>
                                <select id="select-coin-sell"></select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Rate
                            </td>
                            <td>
                                <span id="rate-sell" class="width-100"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Amount
                            </td>
                            <td>
                                <input id="amount-sell" class="width-100" type="number" min="0" step="0.01" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <button id="button-sell" class="center-horizontally margin-10 width-100" disabled>Sell</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="margin-top-50">
        <a asp-controller="Admin" asp-action="Index" class="link-button">Admin panel</a>
    </div>
    <div class="margin-top-50">
        <a asp-controller="Auth" asp-action="LogOut" class="link-button">Log out</a>
    </div>
</div>
}
