@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}
@section Scripts
{
    <script src="~/js/refill.js"></script>
}

<div class="absolute-center flex-vertical align-items-center">
    <h2>Refill</h2>
    <div class="form-table round-border">
        <table>
            <tr>
                <td>
                    Amount
                </td>
                <td>
                    <input id="refill-amount" type="number" min="0" max="1000000" step="0.01" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button id="button-refill" class="center-horizontally margin-10 width-100">Refill</button>
                </td>
            </tr>
        </table>
    </div>
    <div class="margin-top-50">
        <a asp-controller="Home" asp-action="Index" class="link-button">Home</a>
    </div>
</div>