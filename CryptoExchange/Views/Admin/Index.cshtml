@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
}
@section Scripts
{
    <script src="~/js/admin.js"></script>
}

@if (ViewData["isAdmin"] != null && (string)ViewData["isAdmin"] == "true")
{
    <div class="absolute-center flex-vertical align-items-center">
        <h1>Admin panel</h1>
        <div class="flex-horizontal align-items-baseline">
            <div class="flex-vertical align-items-center round-border">
                <h2 class="margin-10">Stock settings</h2>
                <table class="form-table">
                    <tr>
                        <td>
                            Rate margin
                        </td>
                        <td>
                            <input id="rate-margin" type="number" step="0.01" min="0" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Random margin
                        </td>
                        <td>
                            <input id="random-margin" type="number" step="0.01" min="0" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Initial purchase
                        </td>
                        <td>
                            <input id="initial-purchase" type="number" min="0" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Additional purchase
                        </td>
                        <td>
                            <input id="additional-purchase" type="number" min="0" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Initial grant
                        </td>
                        <td>
                            <input id="initial-grant" type="number" min="0" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button id="button-stock-settings" class="center-horizontally margin-10 width-100">Update</button>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="flex-vertical align-items-center round-border">
                <h2 class="margin-10">Stock coins</h2>
                <table id="coins" class="data-table">
                </table>
            </div>
            <div class="flex-vertical align-items-center round-border">
                <h2 class="margin-10">Manage coins</h2>
                <div class="flex-horizontal">
                    <div class="round-border">
                        <table class="form-table">
                            <tr>
                                <td>
                                    Coin
                                </td>
                                <td>
                                    <select id="select-coin-add"></select>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <button id="button-add-coin" class="center-horizontally margin-10 width-100">Add</button>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="round-border">
                        <table class="form-table">
                            <tr>
                                <td>
                                    Coin
                                </td>
                                <td>
                                    <select id="select-coin-delete"></select>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <button id="button-delete-coin" class="center-horizontally margin-10 width-100">Delete</button>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="margin-top-50">
            <a asp-controller="Home" asp-action="Index" class="link-button">Home</a>
        </div>
    </div>
}
