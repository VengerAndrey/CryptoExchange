<div class="absolute-center flex-vertical align-items-center">
    <div class="round-border flex-vertical align-items-center">
        <h2 class="margin-10">Sign up</h2>
        <div>
            <form asp-controller="Auth" asp-action="SignUp">
                <input name="email" class="margin-10" type="email" placeholder="Email" required />
                <input name="password" class="margin-10" type="password" placeholder="Password" required />
                <button class="center-horizontally margin-top">Sign up</button>
            </form>
        </div>
    </div>
    <div>
        <a class="link-button margin-top-50 alternative" asp-controller="Auth" asp-action="SignIn">Sign in</a>
    </div>
</div>